        reviews.add(new Review(1, "Заказ доставили очень быстро", "Заказ доставили очень быстро и оперативно, курьер выжливый и прятный", new DateTime(), 1, "Станислав"));
        reviews.add(new Review(1, "Заказ доставили очень быстро", "Заказ доставили очень быстро и оперативно, курьер выжливый и прятный", new DateTime(), 1, "Станислав"));
        reviews.add(new Review(1, "Заказ доставили очень быстро", "Заказ доставили очень быстро и оперативно, курьер выжливый и прятный", new DateTime(), 1, "Станислав"));
        reviews.add(new Review(1, "Заказ доставили очень быстро", "Заказ доставили очень быстро и оперативно, курьер выжливый и прятный", new DateTime(), 1, "Станислав"));
        reviews.add(new Review(1, "Заказ доставили очень быстро", "Заказ доставили очень быстро и оперативно, курьер выжливый и прятный", new DateTime(), 1, "Станислав"));
        reviews.add(new Review(1, "Заказ доставили очень быстро", "Заказ доставили очень быстро и оперативно, курьер выжливый и прятный", new DateTime(), 1, "Станислав"));
        reviews.add(new Review(1, "Заказ доставили очень быстро", "Заказ доставили очень быстро и оперативно, курьер выжливый и прятный", new DateTime(), 1, "Станислав"));
        reviews.add(new Review(1, "Заказ доставили очень быстро", "Заказ доставили очень быстро и оперативно, курьер выжливый и прятный", new DateTime(), 1, "Станислав"));

        adapter.setData(reviews);
        rvReviews.setAdapter(adapter);
    }


    @Override
    public void onclick(int position) {
        Log.i(TAG, "onclick: " + position);
    }
}
